<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#F7F5F2"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/game_IMG_heart1"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_heart_icon">
        </ImageView>

        <ImageView
            android:id="@+id/game_IMG_heart2"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignTop="@id/game_IMG_heart1"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/game_IMG_heart1"
            android:src="@drawable/ic_heart_icon">
        </ImageView>

        <ImageView
            android:id="@+id/game_IMG_heart3"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignTop="@id/game_IMG_heart2"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/game_IMG_heart2"
            android:src="@drawable/ic_heart_icon">
        </ImageView>

        <TextView
            android:id="@+id/score_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="000"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/matrix">
        <View style="@style/HorizontalDivider"></View>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#FFEEEE">
            <ImageView
                android:id="@+id/image00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cupid_icon"
                android:visibility="invisible">
            </ImageView>
            <View style="@style/VerticalDivider"></View>
            <ImageView
                android:id="@+id/image01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cupid_icon"
                android:visibility="invisible">
            </ImageView>
            <View style="@style/VerticalDivider"></View>
            <ImageView
                android:id="@+id/image02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cupid_icon"
                android:visibility="invisible">
            </ImageView>
            <View style="@style/VerticalDivider"></View>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View style="@style/HorizontalDivider"></View>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#F7F5F2">
            <ImageView
                android:id="@+id/image10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cupid_icon"
                android:visibility="invisible">
            </ImageView>
            <View style="@style/VerticalDivider"></View>
            <ImageView
                android:id="@+id/image11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cupid_icon"
                android:visibility="invisible">
            </ImageView>
            <View style="@style/VerticalDivider"></View>
            <ImageView
                android:id="@+id/image12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cupid_icon"
                android:visibility="invisible">
            </ImageView>
            <View style="@style/VerticalDivider"></View>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <View style="@style/HorizontalDivider"></View>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
