                android:visibility="invisible">
            </ImageView>
            <View style="@style/VerticalDivider"></View>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#F7F5F2"
        android:id="@+id/arrows_btn_space">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/left_BTN"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#DFDFDE"
            app:icon="@drawable/ic_left_icon"
            app:iconSize="40dp"
            app:iconTint="#FFA8A8"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/up_BTN"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="165dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#DFDFDE"
            app:icon="@drawable/ic_up_icon"
            app:iconSize="40dp"
            app:iconTint="#FFA8A8"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/right_BTN"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/left_BTN"
            android:layout_marginStart="320dp"
            android:backgroundTint="#DFDFDE"
            app:icon="@drawable/ic_right_icon"
            app:iconSize="40dp"
            app:iconTint="#FFA8A8">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/down_BTN"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignStart="@id/up_BTN"
            android:layout_marginTop="90dp"
            android:backgroundTint="#DFDFDE"
            app:icon="@drawable/ic_down_icon"
            app:iconSize="40dp"
            app:iconTint="#FFA8A8">
        </com.google.android.material.button.MaterialButton>
        <View style="@style/HorizontalDivider"></View>
    </RelativeLayout>

</LinearLayout>